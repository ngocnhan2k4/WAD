<main class="cate__manu container">
    <div class="header">
        <h1 class="heading">Customer List</h1>
    </div>
    <nav>
        <ul class="menu">
            <li class="cate__nav menu__active">Caterogies</li>
            <li class="manu__nav">Manufactories</li>
            <div class="decor__nav"></div>
        </ul>
    </nav>
    <div class="cate__manu__content">
        <div class="cate__content">
            <div class="cate__manu-heading">
                <div class="search-container">
                    <input
                        type="text"
                        class="search-input search__cate"
                        placeholder="Search by name categories"
                    />
                    <button
                        class="search-button search__cate-btn"
                    >Search</button>
                </div>
                <button
                    class="add__new add__new-cate"
                    style="white-space: pre;"
                >+ Add new</button>
            </div>
            <div class="row row-cols-3">
                <div class="col">
                    <div class="cate__item">
                        <img
                            src="https://via.placeholder.com/150"
                            alt="Category 1"
                            class="cate__item-image"
                        />
                        <h2 class="cate__item-title">Electronics</h2>
                        <p class="cate__item-description">Discover the latest in
                            electronic gadgets and devices.</p>
                    </div>
                </div>
                <div class="col">
                    <div class="cate__item">
                        <img
                            src="https://via.placeholder.com/150"
                            alt="Category 2"
                            class="cate__item-image"
                        />
                        <h2 class="cate__item-title">Furniture</h2>
                        <p class="cate__item-description">Stylish and modern
                            furniture for every room in your home.</p>
                    </div>
                </div>
                <div class="col">
                    <div class="cate__item">
                        <img
                            src="https://via.placeholder.com/150"
                            alt="Category 3"
                            class="cate__item-image"
                        />
                        <h2 class="cate__item-title">Clothing</h2>
                        <p class="cate__item-description">Trendy outfits for
                            men, women, and kids at unbeatable prices.</p>
                    </div>
                </div>
            </div>

        </div>
        <div class="manu__content">
            <div class="cate__manu-heading">
                <div class="search-container">
                    <input
                        type="text"
                        class="search-input search__manu"
                        placeholder="Search by name manufactories"
                    />
                    <button
                        class="search-button search__manu-btn"
                    >Search</button>
                </div>
                <button
                    class="add__new add__new-manu"
                    style="white-space: pre;"
                >+ Add new</button>
            </div>
            <div class="row row-cols-3">
                <div class="col">
                    <div class="manu__item">
                        <img
                            src="https://via.placeholder.com/150"
                            alt="Manufacturer 1"
                            class="manu__item-image"
                        />
                        <h2 class="manu__item-title">Samsung</h2>
                        <p class="manu__item-description">Leading innovations in
                            electronics and appliances.</p>
                    </div>
                </div>
                <div class="col">
                    <div class="manu__item">
                        <img
                            src="https://via.placeholder.com/150"
                            alt="Manufacturer 2"
                            class="manu__item-image"
                        />
                        <h2 class="manu__item-title">IKEA</h2>
                        <p class="manu__item-description">Affordable,
                            well-designed furniture and home accessories.</p>
                    </div>
                </div>
                <div class="col">
                    <div class="manu__item">
                        <img
                            src="https://via.placeholder.com/150"
                            alt="Manufacturer 3"
                            class="manu__item-image"
                        />
                        <h2 class="manu__item-title">Nike</h2>
                        <p class="manu__item-description">High-performance
                            sportswear and casual clothing.</p>
                    </div>
                </div>
            </div>

        </div>

    </div>
</main>